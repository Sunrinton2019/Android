<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/ic_left"
        app:layout_constraintBottom_toBottomOf="@id/add_info"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/add_info" />

    <TextView
        android:id="@+id/add_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:lineSpacingExtra="-0.3sp"
        android:text="문제 등록"
        android:textColor="#735733"
        android:textSize="22.7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_imageView"
        android:layout_width="300dp"

        android:layout_height="175dp"
        android:layout_marginTop="47dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_info" />

    <TextView
        android:id="@+id/add_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="4.7sp"
        android:text="문제 : "
        android:textColor="#735733"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/add_imageView"
        app:layout_constraintTop_toBottomOf="@id/add_imageView" />

    <EditText
        android:id="@+id/add_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginRight="14dp"
        android:hint="문제 이름 입력해주세요."
        android:maxLength="5"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@id/add_tv1"
        app:layout_constraintLeft_toRightOf="@id/add_tv1"
        app:layout_constraintRight_toRightOf="@id/add_imageView"
        app:layout_constraintTop_toTopOf="@id/add_tv1" />

    <TextView
        android:id="@+id/add_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:lineSpacingExtra="4.7sp"
        android:text="난이도 : "
        android:textColor="#735733"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/add_tv1"
        app:layout_constraintTop_toBottomOf="@id/add_input"

        />

    <ImageView
        android:id="@+id/add_star1"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_nolightstart"
        app:layout_constraintBottom_toBottomOf="@id/add_tv2"
        app:layout_constraintLeft_toRightOf="@id/add_tv2"
        app:layout_constraintTop_toTopOf="@id/add_tv2" />

    <ImageView
        android:id="@+id/add_star2"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_nolightstart"
        app:layout_constraintBottom_toBottomOf="@id/add_star1"
        app:layout_constraintLeft_toRightOf="@id/add_star1"
        app:layout_constraintTop_toTopOf="@id/add_star1" />

    <ImageView
        android:id="@+id/add_star3"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_nolightstart"
        app:layout_constraintBottom_toBottomOf="@id/add_star1"
        app:layout_constraintLeft_toRightOf="@id/add_star2"
        app:layout_constraintTop_toTopOf="@id/add_star1" />

    <ImageView
        android:id="@+id/add_star4"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="5dp"

        android:src="@drawable/ic_nolightstart"
        app:layout_constraintBottom_toBottomOf="@id/add_star1"
        app:layout_constraintLeft_toRightOf="@id/add_star3"
        app:layout_constraintTop_toTopOf="@id/add_star1" />

    <ImageView
        android:id="@+id/add_star5"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_nolightstart"
        app:layout_constraintBottom_toBottomOf="@id/add_star1"
        app:layout_constraintLeft_toRightOf="@id/add_star4"
        app:layout_constraintTop_toTopOf="@id/add_star1" />

    <TextView
        android:id="@+id/add_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="4.7sp"
        android:text="과목 :"
        android:textColor="#735733"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/add_tv2"
        app:layout_constraintTop_toBottomOf="@id/add_tv2" />

    <Spinner
        android:id="@+id/add_spinner"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@id/add_tv3"
        app:layout_constraintLeft_toRightOf="@id/add_tv3"
        app:layout_constraintTop_toTopOf="@id/add_tv3">


    </Spinner>

    <TextView
        android:id="@+id/add_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="4.7sp"
        android:text="알림받기 :"
        android:textColor="#735733"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/add_tv2"
        app:layout_constraintTop_toBottomOf="@id/add_spinner" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/switch1"
        app:layout_constraintBottom_toBottomOf="@id/add_tv4"
        app:layout_constraintLeft_toRightOf="@id/add_tv4"
        app:layout_constraintTop_toTopOf="@id/add_tv4" />

    <TextView
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_add_btn"
        android:gravity="center"
        android:text="확인"
        android:textColor="#fff"
        android:id="@+id/add_btn"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_tv4" />
</android.support.constraint.ConstraintLayout>