<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProblemActivity">
    <ImageView
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:id="@+id/problem_backbtn"
        android:layout_marginLeft="24dp"
        android:src="@drawable/ic_left"
        app:layout_constraintBottom_toBottomOf="@id/problem_info"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/problem_info" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22.7sp"
        android:textColor="#735733"
        android:lineSpacingExtra="-0.3sp"
        android:text="수학"
        android:id="@+id/problem_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"

        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/problemrecycler"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="33dp"
        app:layout_constraintTop_toBottomOf="@id/problem_info"
        ></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>