<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="294dp"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/problem_img"
        android:layout_width="140dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/problem_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:lineSpacingExtra="3sp"
        android:text="문제 : 삼차함수"
        android:textColor="#735733"
        android:textSize="9.7sp"
        app:layout_constraintBottom_toTopOf="@id/problem_tv2"

        app:layout_constraintLeft_toRightOf="@id/problem_img"
        app:layout_constraintTop_toTopOf="@id/problem_img" />

    <TextView
        android:id="@+id/problem_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3sp"
        android:text="난이도 : "
        android:textColor="#735733"
        android:textSize="9.7sp"
        app:layout_constraintBottom_toBottomOf="@id/problem_img"
        app:layout_constraintLeft_toLeftOf="@id/problem_tv1"
        app:layout_constraintTop_toBottomOf="@id/problem_tv1" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#AC8A8A"
        />
    <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:id="@+id/problem_key"
        android:src="@drawable/problem_nokey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        />
</android.support.constraint.ConstraintLayout>