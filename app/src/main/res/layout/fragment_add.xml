<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment">

    <TextView
        android:id="@+id/add_fbtn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="56dp"
        android:lineSpacingExtra="1.3sp"
        android:text="Main"
        android:textColor="#735733"
        android:textSize="22.7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/fadd_bg"
        android:layout_width="300dp"
        android:layout_height="215dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_main1"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_fbtn_info"

        />


    <TextView
        android:id="@+id/fadd_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:lineSpacingExtra="-0.4sp"
        android:text="총 푼 문제"
        android:textColor="#735733"
        android:textSize="11.7sp"
        app:layout_constraintLeft_toLeftOf="@id/fadd_tv1"

        app:layout_constraintTop_toBottomOf="@id/progress1" />


    <ProgressBar
        android:id="@+id/progress2"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="230dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="90"
        app:layout_constraintLeft_toLeftOf="@id/fadd_bg"
        app:layout_constraintRight_toRightOf="@id/fadd_bg"
        app:layout_constraintTop_toBottomOf="@id/fadd_tv2" />

    <TextView
        android:id="@+id/progress2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:lineSpacingExtra="1.9sp"
        android:text="23/30"
        android:textColor="#735733"
        android:textSize="9.4sp"
        app:layout_constraintBottom_toBottomOf="@id/progress2"
        app:layout_constraintLeft_toLeftOf="@id/progress2"
        app:layout_constraintTop_toTopOf="@id/progress2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="1.9sp"
        android:text="23/30"
        android:textColor="#000"
        android:textSize="9.4sp"
        app:layout_constraintBottom_toBottomOf="@id/progress1"
        app:layout_constraintLeft_toLeftOf="@id/progress1"
        app:layout_constraintTop_toTopOf="@id/progress1" />

    <TextView
        android:id="@+id/fadd_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="0.7sp"
        android:text="안녕하세요! 이예성님"
        android:textColor="#735733"
        android:textSize="13.3sp"
        app:layout_constraintLeft_toLeftOf="@id/fadd_bg"
        app:layout_constraintRight_toRightOf="@id/fadd_bg"
        app:layout_constraintTop_toTopOf="@id/fadd_bg" />

    <TextView
        android:id="@+id/fadd_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="18dp"
        android:lineSpacingExtra="-0.4sp"
        android:text="오늘 푼 문제"
        android:textColor="#735733"
        android:textSize="11.7sp"
        app:layout_constraintLeft_toLeftOf="@id/fadd_bg"
        app:layout_constraintTop_toBottomOf="@id/fadd_info" />

    <ProgressBar
        android:id="@+id/progress1"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="230dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="90"
        app:layout_constraintLeft_toLeftOf="@id/fadd_bg"
        app:layout_constraintRight_toRightOf="@id/fadd_bg"
        app:layout_constraintTop_toBottomOf="@id/fadd_tv1" />

    <TextView
        android:id="@+id/progress1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:lineSpacingExtra="1.9sp"
        android:text="23/30"
        android:textColor="#735733"
        android:textSize="9.4sp"
        app:layout_constraintBottom_toBottomOf="@id/progress1"
        app:layout_constraintLeft_toLeftOf="@id/progress1"
        app:layout_constraintTop_toTopOf="@id/progress1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/add_fbtn_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="-2.7sp"
        android:text="카테고리"
        android:textColor="#735733"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/add_fbtn_info"
        app:layout_constraintTop_toBottomOf="@id/fadd_bg" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="256dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_fbtn_info2">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>